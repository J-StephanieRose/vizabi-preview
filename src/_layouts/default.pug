block variables
  - var control_buttons = { play: true, languages: ["en", "se"], record: true }
  - var control_buttons = {play: true, language: true, record: true }
  - var title = "Preview"
  - var description = "This page previews Vizabi"
  - var tool = false
  - var tool_config = false
  - var source_code = "https://github.com/Gapminder/vizabi/tree/develop/src/tools/"
  - var chart_buttons = "[]"
  - var chart_buttons_expand = "[]"

doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0', name='viewport')

    title Vizabi - #{title}

    //- Styles
    link(rel='stylesheet', href='/vizabi-preview/build/assets/vendor/css/font-awesome.min.css')
    link(rel='stylesheet', href='/vizabi-preview/build/assets/css/main.css')
    link(rel='stylesheet', href='/vizabi/build/dist/vizabi.css')
  body
    #vzbp-main
      include ../_partials/nav.pug
      #vzbp-placeholder.vzbp-viewer

    #vzbp-sidebar
      include ../_partials/sidebar.pug

    include ../_partials/state_editor.pug

    script(src='/vizabi-preview/build/assets/vendor/js/d3/d3.js')
    script(src='/vizabi-preview/build/assets/vendor/js/vizabi-ws-reader/bundle.web.js')
    script(src='/vizabi-preview/build/assets/vendor/js/vizabi-ddfcsv-reader/vizabi-ddfcsv-reader.js')
    script(src='/vizabi/build/dist/vizabi.js')
    script(src='/vizabi-preview/build/assets/js/_utils.js')
    script(src='/vizabi-preview/build/assets/js/_collapsible.js')
    script(src='/vizabi-preview/build/assets/js/_url.js')
    script(src='/vizabi-preview/build/assets/js/_codepen.js')
    script(src='/vizabi-preview/build/assets/js/main.js')
    script(src='/vizabi-preview/build/assets/js/_state-editor.js')
    script(src='/vizabi-preview/build/assets/js/_size-div.js')
    script(src='/vizabi-preview/build/assets/js/_interaction.js')
    script(src='/vizabi-preview/build/assets/js/_dropdowns.js')

    unless !tool
      include ../_partials/toolscript.pug
